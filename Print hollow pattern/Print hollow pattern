#include<iostream>
using namespace std;
int main()
{
    int n,i,stars,space,row;
    cout<<"Enter the value of n:";
    cin>>n;
    for(row=1;row<=n;row++)
    {
    if(row==1)
    {
        for(i=1;i<=2*n-1;i++)
        {
            cout<<"* ";
        }
    }
        else
        {
         space=2*row-3;
         stars=((2*n-1)-space)/2;
         
         for(i=1;i<=stars;i++)
         {
             cout<<"* ";
         }
         for(i=1;i<=space;i++)
         {
             cout<<"  ";
         }
         for(i=1;i<=stars;i++)
         {
             cout<<"* ";
             
         }
        }
        cout<<"\n";
        }
    return 0;
}
